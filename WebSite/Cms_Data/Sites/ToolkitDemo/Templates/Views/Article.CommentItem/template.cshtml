@using ToolkitDemo
@model ToolkitDemo.Models.Comment
@if (null != Model)
{
    <div class="item" @ViewHelper.EditItemAttributes(Model)>
        <div class="clearfix">
            <h5 class="title">@Model.Title</h5>
            <span class="name">@Model.Member</span>
        </div>
        <p>@Model.Body</p>
        @if (User.Identity.IsAuthenticated)
        {
            @Ajax.ActionLink("Delete".RawLabel().ToString(), "DeleteComment", "Comment", new { area = ToolkitDemoArea.Name, siteName = Site.Current.FullName, uuid = Model.UUID }, new AjaxOptions() { Confirm = "Are you sure want to delete this comment?", HttpMethod = "POST", OnComplete = "DeleteComment" }, new { @class = "delete" })
        }
    </div>
}
